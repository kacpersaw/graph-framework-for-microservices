apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: nexus-validation
  name: nexus-validation
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nexus-validation
  template:
    metadata:
      labels:
        app: nexus-validation
    spec:
      initContainers:
        - name: check-nexus-proxy-container
          image: "gcr.io/mesh7-public-images/tools:latest"
          command:
            - /bin/bash
            - -c
            - |
              #!/bin/bash
              set -x
              URL="http://nexus-proxy-container/api/v1/namespaces"
              max_retries=60
              counter=0
              while [[ $counter -lt $max_retries ]]; do
                    status=$(curl -s -o /dev/null -I -w "%{http_code}" -XGET $URL)
                    if [ $status == "200" ]; then
                        echo "$URL is reachable"
                        exit 0
                    else
                        counter=$((counter +1))
                        sleep 5
                    fi
              done
      containers:
        - image: {{.Image}}:{{.Tag}}
          imagePullPolicy: IfNotPresent
          name: nexus-validation
          volumeMounts:
            - name: tls
              mountPath: "/etc/nexus-validation/tls"
              readOnly: true
            - name: config
              mountPath: "/etc/kubeconfig"
              readOnly: true
      volumes:
        - name: tls
          secret:
            secretName: nexus-validation-tls
        - name: config
          configMap:
            name: validation-webhook-kubeconfig-local
      {{if .IsImagePullSecret }}
      imagePullSecrets:
      - name: {{ .ImagePullSecret }}
      {{end}}
